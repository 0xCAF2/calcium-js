{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "sourceMap": true
    },
    "include": [
        "src/index.ts"
    ]
}
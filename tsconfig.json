{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ES2017", "ES7", "ES6", "DOM"],
    "strict": true,
    "declaration": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "include": ["src/*", "src/*/*"]
}

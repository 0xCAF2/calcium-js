{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2015",
    "moduleResolution": "nodenext",
    "lib": ["ES2017", "ES7", "ES6", "DOM"],
    "strict": true,
    "declaration": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["src/*", "src/*/*"]
}
